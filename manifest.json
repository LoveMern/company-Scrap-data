{
  "manifest_version": 3,
  "name": "LinkedIn Modular Scraper",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Activate the extension"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/components/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "script-src": [
      "'self'",
      "'unsafe-eval'"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/components/basicDetails/BasicDetails.js",
        "src/components/aboutDetails/AboutDetails.js",
        "src/components/postsArticalDetails/PostArticalDetail.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}